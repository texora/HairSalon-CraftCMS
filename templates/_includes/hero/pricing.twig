<section class="text-with-image bg-silver-light position-relative">
  <div class="container">
    <div class="row align-items-lg-end row-gap-4">
      <div class="col-12 col-lg-6">
        <div class="text-content">
            {% if entry.subtitle %}<h6>\  {{ entry.subtitle }}</h6>{% endif %}
            <div class="banner-title">
                <h1>{{ entry.title }}</h1>
            </div>
            <div class="d-flex gap-3">
                <div class="icon w-100">
                 \
                </div>
                <div class="content-width w-100">
                    {{ entry.heroText }}
                    {% if entry.heroCta %}
                      <a class="btn btn-black w-100 d-none d-lg-block" href="{{ entry.heroCta.value }}">{{ entry.heroCta.label }}</a>
                    {% endif %}
                </div>
            </div>
        </div>
      </div>
      <div class="col-12 col-lg-6">
        <div class="image">
          {% set heroImage = entry.heroImage.eagerly().one() %}
          {% if heroImage %}
            <img class="img-fluid" src="{{ heroImage.url }}" alt="{{ heroImage.title }}" />
          {% endif %}
          {% if entry.heroCta %}
            <a class="btn btn-black w-100 d-block d-lg-none mt-5" href="{{ entry.heroCta.value }}">{{ entry.heroCta.label }}</a>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</section>