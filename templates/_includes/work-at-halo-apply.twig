{% set siteGlobals = craft.entries().section('siteGlobals').one() %}
<section class="looking-for">
    <div class="container">
        <div class="work-at-halo">
            <div class="row align-items-center row-gap-5">
                <div class="col-12 col-md-6">
                    {{ siteGlobals.text2 }}
                    {{ siteGlobals.cta2.getLink({
                        class: 'btn benefits btn-black'
                    }) }}
                </div>
                <div class="col-12 col-md-6">
                    <ul>
                        {% for bulletPoint in siteGlobals.bulletPoints %}
                            <li><img src="/static/svg/check.svg"> {{ bulletPoint.text }}</li>
                        {% endfor %}
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>
<section class="work-at">
    <div class="container">
        <div class="work-at-halo">
            <div class="row align-items-center row-gap-5">
                <div class="col-12 col-md-5">
                    {% if siteGlobals.heading %}<h2>{{ siteGlobals.heading }}</h2>{% endif %}
                    {{ siteGlobals.text }}
                    {{ siteGlobals.cta.getLink({
                        class: 'btn benefits'
                    }) }}
                </div>
                <div class="col-12 col-md-6 offset-lg-1">
                    <div class="email-form">
                        {% if siteGlobals.formText %}<h4>{{ siteGlobals.formText|nl2br }}</h4>{% endif %}
                        <form>
                            <div class="email">
                                <label for="fname">Name</label>
                                <input type="text" class="email-bx form-control" name="fname" placeholder="Sarah Smith"> </div>
                            <div class="email">
                                <label for="experience">Number of Years Experience</label>
                                <input type="text" class="email-bx form-control" name="experience" placeholder="3 years experience"> </div>
                            <div class="email">
                                <label for="insta">Instagram</label>
                                <input type="text" class="email-bx form-control" name="insta" placeholder="@Instagram"> </div>
                            <div class="email">
                                <label for="qualifi">Qualifications</label>
                                <input type="text" class="email-bx form-control" name="qualifi" placeholder="NVQ Level 3"> </div>
                            <div class="email">
                                <label for="phonen">Phone Number</label>
                                <input type="tel" class="email-bx form-control" name="phonen" placeholder="07543 234 554"> </div>
                            <div class="email">
                                <button class="btn btn-black" type="submit">submit</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>