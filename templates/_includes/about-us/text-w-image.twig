<section class="unparalleled">
  <div class="container">
    <div class="row flex-column-reverse flex-md-row align-items-center row-gap-5">
      {% set image = entry.image.eagerly().one() %}
      <div class="col-12 col-md-6">
        {% if image %}<img src="{{ image.url }}" alt="{{ image.title }}" />{% endif %}
      </div>
      <div class="col-12 col-md-6">
        <div class="d-flex flex-column row-gap-3 row-gap-md-4">
          {{ entry.text }}
        </div>
      </div>
    </div>
  </div>
</section>