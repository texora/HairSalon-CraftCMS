<section class="contact-cta pt-100 pb-md-5">
    <div class="container">
        <div class="row row-gap-4 gx-xl-5">
            {% if block.cta1 %}
                <div class="col-12 col-lg-6">
                    <div class="contact-cta-box border text-center d-flex flex-column align-items-center justify-content-center h-100 gap-3">
                        {% if block.cta1Text %}<h4>{{ block.cta1Text }}</h4>{% endif %}
                        <a class="btn btn-brown" href="{{ block.cta1.value }}">{{ block.cta1.label }}</a>
                    </div>
                </div>
            {% endif %}
            {% if block.cta2 %}
                <div class="col-12 col-lg-6">
                    <div class="contact-cta-box contact-number border text-center d-flex flex-column align-items-center justify-content-center h-100 gap-3">
                        {% if block.cta2Text %}<h4>{{ block.cta2Text }}</h4>{% endif %}
                        <a class="border-bottom" href="{{ block.cta2.value }}">{{ block.cta2.label }}</a>
                    </div>
                </div>
            {% endif %}
        </div>
    </div>
</section>