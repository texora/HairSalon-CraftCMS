                            {% endif %}
                            {% if card.subheading %}
                                <div class="caption-title position-absolute end-0 z-2">
                                    <a class="bg-brown text-white text-end p-3 d-inline-block">{{ card.subheading }}</a>
                                </div>
                            {% endif %}
                            {% if card.heading %}
                                {% if card.headingStyle == 'text' %}
                                    <div class="card-img-overlay text-white z-2 px-sm-4 p-3">
                                       <h4>{{ card.heading|nl2br }}</h4>
                                    </div>
                                {% elseif card.headingStyle == 'button' %}
                                    {% if card.headingPosition == 'leftBottom' %}
                                        <div class="caption-title caption-title-left-bottom position-absolute start-0 z-2">
                                            <a class="bg-brown text-white p-3 d-inline-block">{{ card.heading|nl2br }}</a>
                                        </div>
                                    {% elseif card.headingPosition == 'rightBottom' %}
                                        <div class="caption-title caption-title-bottom position-absolute end-0 z-2">
                                            <a class="bg-brown text-white text-end p-3 d-inline-block">{{ card.heading|nl2br }}</a>
                                        </div>
                                    {% endif %}
                                {% endif %}
                            {% endif %}
                        </div>
                        <div class="card-body px-0">
                           {{ card.text }}
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
</section>
