<section class="subduction-section bg-silver-light py-80">
    <div class="container">
        <div class="section-title text-center mb-md-5 mb-4">
            {% if block.title %}<h2 class="mb-3">{{ block.title }}</h2>{% endif %}
            {{ block.text }}
        </div>
        <form class="mx-auto my-0">
          <div class="form-group">
            <label for="InputEmail" class="form-label">Email</label>
            <input type="email" class="form-control bg-transparent rounded-0 px-0" id="InputEmail" aria-describedby="emailHelp" placeholder="Enter Your Email address">
          </div>
          <!-- <div class="mt-4 text-sm-end">
              <button type="submit" class="btn btn-black">Submit</button>
          </div> -->
        </form>
    </div>
</section>