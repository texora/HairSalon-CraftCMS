{% if siteGlobals.notificationText %}
    <div class="top-bar bg-gray py-2 text-white position-absolute w-100 z-2">
        <div class="container">
             <div class="row">
                 <div class="col-12 col-lg-9 col-xl-7 offset-lg-3 offset-xl-5 d-flex flex-wrap gap-2 justify-content-center justify-content-sm-between">
                    <div>
                        {{ siteGlobals.notificationText }}
                    </div>
                    <div class="d-flex gap-4">
                        {% if siteGlobals.ctaText %}<span>{{ siteGlobals.ctaText }}</span>{% endif %}
                        {% if siteGlobals.cta1 %}
                            {{ siteGlobals.cta1.link }}
                        {% endif %}
                    </div>
                 </div>
             </div>
         </div>
    </div>
{% endif %}