{% if entry.textContent %}
    <section class="building-section">
        <div class="container">
            {{ entry.textContent }}
            {{ entry.cta.getLink({
                class: 'btn btn-black'
            }) }}
        </div>
    </section>
{% endif %}

<section class="collective-section py-md-5 py-4">
    <div class="container">
        <div class="row align-items-center row-gap-4">
            {% if entry.careerSectionLeftText %}
                <div class="col-12 col-lg-7">
                    {{ entry.careerSectionLeftText }}
                </div>
            {% endif %}
            {% if entry.careerSectionRightText %}
                <div class="col-12 col-lg-5">
                    {{ entry.careerSectionRightText }}
                </div>
            {% endif %}
        </div>
        <div class="nav-product">
            {% for job in craft.entries().section('jobsListing').limit(6).all() %}
                <div class="slide">
                    <div class="senior-card">
                         <div class="position-relative">
                            {% set image = job.image.eagerly().one() %}
                            {% if image %}<img src="{{ image.url('jobThumb') }}" alt="{{ job.title }}" />{% endif %}
                            <div class="senior-card-badge position-absolute bottom-0 end-0">
                                {{ job.jobType.label }}
                            </div>
                        </div>
                        <div class="card-body">
                            <h4>{{ job.title }}</h4>
                            {% if job.salaryText %}<h6>{{ job.salaryText }}</h6>{% endif %}
                            <hr>
                            <p>{{ job.shortDescription|nl2br }}</p>
                            <a class="view-job d-block" href="{{ url('jobs/apply') }}">{{ "View job details and apply"|t }}</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</section>