{% extends "_layouts/main" %}

{% switch entry.type %}
    {% case 'aboutUs' %}
        {% set bodyClass = 'about' %}
    {% case 'apply' %}
        {% set bodyClass = 'apple' %}
    {% case 'ourCulture' %}
        {% set bodyClass = 'cultire' %}
    {% case 'ourPeople' %}
        {% set bodyClass = 'our-people' %}
    {% case 'salaryBenefits' %}
        {% set bodyClass = 'salary-benefirs' %}
    {% case 'vacancies' %}
        {% set bodyClass = 'vacancy' %}
    {% default %}
        {% set bodyClass = '' %}
{% endswitch %}

{% block main %}

  {% cache using key entry.slug %}

    {% include '_includes/entryTypes/jobs/' ~ entry.type ignore missing %}

  {% endcache %}

{% endblock %}