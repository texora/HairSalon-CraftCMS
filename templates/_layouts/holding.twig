<!DOCTYPE html>
<html lang="en">
{% set segment1 = craft.app.request.getSegment(1) %}
{% set env = getenv('CRAFT_ENVIRONMENT') %}

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link rel="icon" type="image/png" href="./static/images/favicon-180.png" />
    <link rel="icon" type="image/png" href="./static/images/favicon-92.png" />
    <link rel="icon" type="image/png" href="./static/images/favicon-80.png" />
    <link rel="icon" type="image/png" href="./static/images/favicon-70.png" />
    <link rel="icon" type="image/png" href="./static/images/favicon-64.png" />
    <link rel="icon" type="image/png" href="./static/images/favicon-32.png" />
    <link href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:ital,wght@0,300;0,400;0,500;0,600;0,700;1,300;1,400;1,500;1,600;1,700&display=swap" rel="stylesheet">
    <link href="https://cdn.plyr.io/3.7.8/plyr.css" rel="stylesheet">

    <!-- Custom -->
    {% do view.registerCssFile('/static/css/main.css') %}

    {% if pageCss is defined %}
        {% for cssFile in pageCss|default([]) %}
            {% do view.registerCssFile('/static/css/pages/' ~ cssFile ~ '.css') %}
        {% endfor %}
    {% endif %}

</head>

<body class="{% if bodyClass is defined %} {{ bodyClass }}{% endif %}">

    {% include '_includes/header' %}

    <main class="content-page bip" id="content-page">

        {% block main %}{% endblock %}

    </main>

    {% include '_includes/footer' %}


    {% do view.registerJsFile('/static/js/jquery.js') %}
    {% do view.registerJsFile('/static/js/popper.min.js') %}
    {% do view.registerJsFile('https://cdn.plyr.io/3.7.8/plyr.polyfilled.js') %}
    {% do view.registerJsFile('/static/js/bootstrap.min.js') %}
    {% do view.registerJsFile('/static/js/custom.js') %}

    <!-- Custom -->
    {% if pageJs is defined and pageJs|length %}
        {% for jsFile in pageJs %}
            {% do view.registerJsFile('/static/js/pages/' ~ jsFile ~ '.js') %}
        {% endfor %}
    {% endif %}

    {% block pageJs %}{% endblock %}

</body>
</html>